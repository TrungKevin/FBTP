<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_profile"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="12dp"
                android:contentDescription="User profile" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Người đặt: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginVertical="12dp" />

        <!-- Phone Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone"
                app:tint="@color/colorAccent"
                android:layout_marginEnd="16dp"
                android:contentDescription="Phone number" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số điện thoại: "
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Court Type Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_court"
                app:tint="@color/colorAccent"
                android:layout_marginEnd="16dp"
                android:contentDescription="Court type" />

            <TextView
                android:id="@+id/tv_court_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Loại sân: "
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Date and Time Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Date Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/colorAccent"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Booking date" />

                <TextView
                    android:id="@+id/tv_booking_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày: "
                    android:textSize="15sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- Time Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_schedule"
                    app:tint="@color/colorAccent"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Booking time" />

                <TextView
                    android:id="@+id/tv_booking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giờ: "
                    android:textSize="15sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Indicator (Optional) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_booking_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã xác nhận"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/status_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>